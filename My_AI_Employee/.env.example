# =============================================================================
# Silver Tier AI Employee - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your credentials
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Vault Configuration
# -----------------------------------------------------------------------------
VAULT_ROOT=AI_Employee_Vault

# -----------------------------------------------------------------------------
# Gmail MCP Server (for sending emails)
# -----------------------------------------------------------------------------
# 1. Create credentials.json:
#    - Go to https://console.cloud.google.com/apis/credentials
#    - Create OAuth 2.0 Client ID (Desktop application)
#    - Download JSON and save as credentials.json in project root
# 2. Run: python scripts/setup/setup_gmail_oauth.py
#    - This will open browser for OAuth consent
#    - Saves token.json automatically
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.modify

# -----------------------------------------------------------------------------
# LinkedIn MCP Server (for publishing posts)
# -----------------------------------------------------------------------------
# 1. Create LinkedIn app at https://www.linkedin.com/developers/apps
# 2. Add redirect URL: http://localhost:8000/callback
# 3. Note your Client ID and Client Secret
# 4. Run: python scripts/setup/linkedin_oauth2_setup.py
#    - This will guide you through OAuth flow
#    - Saves access token and person URN below
LINKEDIN_ACCESS_TOKEN=<WILL_BE_FILLED_DURING_SETUP>
LINKEDIN_PERSON_URN=<WILL_BE_FILLED_DURING_SETUP>

# -----------------------------------------------------------------------------
# WhatsApp Browser Automation (for sending messages)
# -----------------------------------------------------------------------------
# 1. Run: python scripts/setup/whatsapp_auth.py
#    - Opens browser with QR code
#    - Scan QR with WhatsApp mobile app
#    - Session saved to .whatsapp_session/ directory
# Session expires every ~2 weeks, re-run whatsapp_auth.py to refresh
WHATSAPP_SESSION_DIR=.whatsapp_session
WHATSAPP_CDP_PORT=9222

# -----------------------------------------------------------------------------
# Global Settings
# -----------------------------------------------------------------------------
# DRY_RUN: If true, logs actions but doesn't actually send emails/posts/messages
# HIGHLY RECOMMENDED: Keep this true for initial testing!
DRY_RUN=true

# LOG_LEVEL: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# CHECK_INTERVAL: Seconds between watcher checks (default: 60)
CHECK_INTERVAL=60

# ORCHESTRATOR_CHECK_INTERVAL: Seconds between orchestrator checks of /Approved/ folder
ORCHESTRATOR_CHECK_INTERVAL=10

# -----------------------------------------------------------------------------
# Bronze Tier (Legacy - still supported)
# -----------------------------------------------------------------------------
WATCH_FOLDER=./watch_folder
WATCH_MODE=events
DEDUPE_STATE_FILE=./.dedupe_state.json

# =============================================================================
# GOLD TIER: Social Media Monitoring (User Story 4)
# =============================================================================
# Monitor social media platforms for important interactions

# Enable/disable social media monitoring (default: false)
SOCIAL_WATCHER_ENABLED=false

# Check interval in seconds (default: 600 = 10 minutes)
SOCIAL_WATCHER_INTERVAL=600

# Priority keywords (comma-separated, case-insensitive)
# HIGH priority: Urgent customer inquiries
SOCIAL_HIGH_PRIORITY_KEYWORDS=urgent,help,pricing,cost,invoice,payment,client,emergency

# MEDIUM priority: Business opportunities
SOCIAL_BUSINESS_KEYWORDS=project,services,quote,proposal,consulting,hire,contract

# Whitelist accounts (comma-separated)
# If set, ONLY process interactions from these accounts (e.g., "client_a,client_b")
# Leave empty to process all interactions
SOCIAL_WHITELIST_ACCOUNTS=

# Engagement thresholds (viral detection)
SOCIAL_FB_REACTION_THRESHOLD=10
SOCIAL_IG_COMMENT_THRESHOLD=5
SOCIAL_TWITTER_MENTION_THRESHOLD=3

# Daily summary generation time (24-hour format, user's timezone)
SOCIAL_SUMMARY_TIME=18:00

# Platform-specific enable/disable
SOCIAL_FACEBOOK_ENABLED=true
SOCIAL_INSTAGRAM_ENABLED=true
SOCIAL_TWITTER_ENABLED=true

# =============================================================================
# GOLD TIER: Social Media Posting (User Story 2 - Partial)
# =============================================================================
# Browser automation for posting to social media platforms

# Directory for social media browser sessions (gitignored)
SOCIAL_SESSION_DIR=.social_session

# Chrome DevTools Protocol ports for each platform (must be unique)
SOCIAL_FB_CDP_PORT=9223
SOCIAL_IG_CDP_PORT=9224
SOCIAL_TW_CDP_PORT=9225
