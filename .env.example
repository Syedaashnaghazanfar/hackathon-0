# Vault Configuration
VAULT_ROOT=AI_Employee_Vault
VAULT_PATH=AI_Employee_Vault

# Gmail MCP Server
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.modify

# LinkedIn MCP Server
LINKEDIN_ACCESS_TOKEN=<WILL_BE_FILLED_DURING_SETUP>
LINKEDIN_PERSON_URN=<WILL_BE_FILLED_DURING_SETUP>

# WhatsApp Browser Automation (Silver Tier)
WHATSAPP_SESSION_DIR=.whatsapp_session
WHATSAPP_CDP_PORT=9222

# =============================================================================
# GOLD TIER: CEO BRIEFING SETTINGS
# =============================================================================
# Day of week to generate briefing (monday, tuesday, etc.)
BRIEFING_DAY=monday

# Time to generate briefing (24-hour format, e.g., 07:00)
BRIEFING_TIME=07:00

# Timezone for briefing scheduling (e.g., America/New_York, Europe/London)
BRIEFING_TIMEZONE=America/New_York

# =============================================================================
# GOLD TIER: SOCIAL MEDIA POSTING SETTINGS
# =============================================================================
# Directory for social media browser sessions (gitignored)
SOCIAL_SESSION_DIR=.social_session

# Chrome DevTools Protocol ports for each platform (must be unique)
SOCIAL_FB_CDP_PORT=9223
SOCIAL_IG_CDP_PORT=9224
SOCIAL_TW_CDP_PORT=9225

# =============================================================================
# GOLD TIER: SOCIAL MEDIA MONITORING SETTINGS (Optional)
# =============================================================================
# Enable social media monitoring (true/false)
SOCIAL_WATCHER_ENABLED=false

# How often to check social platforms in seconds (default: 600 = 10 minutes)
SOCIAL_WATCHER_INTERVAL=600

# High priority keywords (comma-separated) - triggers immediate action items
SOCIAL_HIGH_PRIORITY_KEYWORDS=urgent,help,pricing,cost,invoice,payment,client,emergency

# Business keywords (comma-separated) - triggers action items within 24 hours
SOCIAL_BUSINESS_KEYWORDS=project,services,quote,proposal,consulting,hire,contract

# Account whitelist (comma-separated) - always create action items for these accounts
SOCIAL_WHITELIST_ACCOUNTS=client_a,client_b,important_contact

# Engagement thresholds for alerts
SOCIAL_FB_REACTION_THRESHOLD=10      # Alert when post gets 10+ reactions
SOCIAL_IG_COMMENT_THRESHOLD=5       # Alert when post gets 5+ comments
SOCIAL_TWITTER_MENTION_THRESHOLD=3   # Alert when 3+ mentions in hour

# =============================================================================
# GOLD TIER: XERO ACCOUNTING SETTINGS (Optional)
# =============================================================================
# Xero API Credentials (get these from https://developer.xero.com/app/manage)
XERO_CLIENT_ID=your_client_id_here
XERO_CLIENT_SECRET=your_client_secret_here
XERO_REDIRECT_URI=http://localhost:3000/callback
XERO_TENANT_ID=your_tenant_id_here
XERO_REFRESH_TOKEN=your_refresh_token_here

# How often to sync Xero data in seconds (default: 300 = 5 minutes)
XERO_WATCHER_INTERVAL=300

# Number of days to sync on first run (default: 30)
XERO_SYNC_DAYS_BACK=30

# Base currency for multi-currency conversion (default: USD)
XERO_BASE_CURRENCY=USD

# Global Settings
DRY_RUN=true
LOG_LEVEL=INFO
CHECK_INTERVAL=60

# MCP Executor
ORCHESTRATOR_CHECK_INTERVAL=10
